<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="viewModel"
                  type="com.mariebyleen.weather.weather_display.forecast.view_model.ForecastViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                    android:layout_margin="8dp">

        <ImageView
            android:id="@+id/forecast_weather_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="16dp"
            app:srcCompat="@{viewModel.forecast.iconResourcesId}"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="40dp"
            android:layout_marginTop="16dp"
            tools:background="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:text="@{viewModel.dateDisplayTitle}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="Monday, Dec 19"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="?android:attr/textColorPrimaryNoDisable"/>

        <TextView
            android:text="@{viewModel.description}"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            tools:text="Clear sky"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toRightOf="@+id/forecast_weather_icon"
            app:layout_constraintTop_toTopOf="@+id/forecast_weather_icon"
            app:layout_constraintBottom_toBottomOf="@+id/forecast_weather_icon"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorPrimaryNoDisable"/>

        <TextView
            android:text="@{viewModel.minTemp}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            tools:text="12"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/forecast_weather_icon"
            app:layout_constraintTop_toTopOf="@+id/forecast_weather_icon"
            app:layout_constraintLeft_toRightOf="@+id/textView9"
            android:layout_marginStart="16dp"/>

        <TextView
            android:text="@{viewModel.maxTemp}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            tools:text="23"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            app:layout_constraintTop_toTopOf="@+id/textView2"
            android:layout_marginStart="48dp"
            app:layout_constraintLeft_toRightOf="@+id/textView2"/>

        <TextView
            android:text="@{@string/degrees(viewModel.useFahrenheit ? @string/fahrenheit : @string/celsius)}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/textView2"
            app:layout_constraintLeft_toRightOf="@+id/textView2"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            tools:text="&#xB0; F"/>

        <TextView
            android:text="@{@string/degrees(viewModel.useFahrenheit ? @string/fahrenheit : @string/celsius)}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/textView3"
            app:layout_constraintLeft_toRightOf="@+id/textView3"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            tools:text="&#xB0; F"/>

        <TextView
            android:text="@string/min_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            tools:text="LOW"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintRight_toRightOf="@+id/textView2"
            app:layout_constraintLeft_toLeftOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.75"
            android:layout_marginTop="8dp"
            android:textColor="?android:attr/textColorPrimaryNoDisable"/>

        <TextView
            android:text="@string/max_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            tools:text="HIGH"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintRight_toRightOf="@+id/textView3"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView6"
            android:textColor="?android:attr/textColorPrimaryNoDisable"/>



    </android.support.constraint.ConstraintLayout>

</layout>