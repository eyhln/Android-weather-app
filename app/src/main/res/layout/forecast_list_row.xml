<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.mariebyleen.weather.weather_display.forecast.view_model.ForecastViewModel" />
        <variable name="forecast" type="ForecastViewModel" />
    </data>

    <LinearLayout
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/forecast_weather_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="16dp"
            app:srcCompat="@{forecast.forecast.iconResourcesId}"/>

    </LinearLayout>

</layout>