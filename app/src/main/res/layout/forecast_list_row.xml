<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.mariebyleen.weather.weather_display.forecast.view_model.ForecastViewModel" />
        <variable name="viewModel" type="ForecastViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                    android:layout_margin="8dp">

        <ImageView
            android:id="@+id/forecast_weather_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="16dp"
            app:srcCompat="@{viewModel.forecast.iconResourcesId}"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="40dp"
            android:layout_marginTop="16dp"
            tools:background="@color/colorPrimary"
            />

        <TextView
            android:text="@{viewModel.dateDisplayTitle}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="Monday, Dec 19"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

        <TextView
            android:text="@{viewModel.description}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="Clear sky"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</layout>