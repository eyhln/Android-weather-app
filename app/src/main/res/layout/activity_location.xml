<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="viewModel"
                  type="com.mariebyleen.weather.location.view_model.LocationViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <Button
            android:id="@+id/button_use_current_location"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/use_current_location"
            android:padding="@dimen/button_padding"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            />

        <Button
            android:id="@+id/button_choose_location"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/choose_location"
            android:padding="@dimen/button_padding"
            android:layout_margin="@dimen/button_margin"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/button_use_current_location"
            android:layout_marginStart="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintRight_toRightOf="parent"/>

        <AutoCompleteTextView
            android:id="@+id/choose_location_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/button_padding"
            android:layout_margin="@dimen/button_margin"
            android:minWidth="150dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/button_choose_location"
            app:layout_constraintLeft_toLeftOf="@+id/button_choose_location"/>

        <Button
            android:id="@+id/button_select_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_location"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/choose_location_field"
            android:layout_marginTop="24dp"/>



    </android.support.constraint.ConstraintLayout>

</layout>