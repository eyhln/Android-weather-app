<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="conditions"
          type="com.mariebyleen.weather.weather_display.current_conditions.view_model.CurrentConditionsViewModel"/>
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="@{conditions.temperature}"
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            tools:text="72"
            android:textSize="56sp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline3"
            app:layout_constraintBottom_toTopOf="@+id/description"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/location"
            android:layout_marginStart="16dp"
            />

        <TextView
            android:text=
                "@{@string/degrees(conditions.useFahrenheit ? @string/fahrenheit : @string/celsius)}"
            android:id="@+id/degrees_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintLeft_toRightOf="@+id/temperature"
            app:layout_constraintTop_toTopOf="@+id/temperature"
            tools:text="o F"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:text="@{@string/updated(conditions.updateTime)}"
            android:id="@+id/updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Last updated: 8:30 pm"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:text="@{conditions.weatherData.cityName}"
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:text="Lawrence"
            app:layout_constraintTop_toTopOf="@+id/imageView4"
            app:layout_constraintLeft_toLeftOf="@+id/temperature"/>

        <TextView
            android:text="@{conditions.weatherData.description}"
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Scattered clouds"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintLeft_toRightOf="@+id/temperature"
            app:layout_constraintRight_toRightOf="@+id/temperature"/>

        <TextView
            android:text="@{@string/humidity(conditions.humidity)}"
            android:id="@+id/humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Humidity: 45%"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/description"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintVertical_bias="0.25"
            app:layout_constraintRight_toLeftOf="@+id/guideline3"
            android:layout_marginEnd="40dp"/>

        <TextView
            android:text="@{@string/wind_speed(conditions.windSpeed)}"
            android:id="@+id/wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Wind: 12 mph NNE"
            app:layout_constraintLeft_toLeftOf="@+id/humidity"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/humidity"
            android:textAppearance="@style/TextAppearance.AppCompat"/>

        <ImageView
            android:layout_width="144dp"
            android:layout_height="144dp"
            app:srcCompat="@{conditions.weatherData.iconResourceId}"
            android:background="@{conditions.isDay ? @color/colorPrimary : @color/colorPrimaryDark}"
            android:id="@+id/imageView4"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintVertical_bias="0.33"
            tools:background="@color/colorPrimary"
            app:layout_constraintRight_toLeftOf="@+id/guideline3"
            android:layout_marginEnd="16dp"
            />

        <TextView
            android:text="@{@string/sunrise(conditions.sunriseTime)}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sunrise"
            app:layout_constraintBaseline_toBaselineOf="@+id/humidity"
            tools:text="Sunrise: 7:34 AM"
            android:textAppearance="@style/TextAppearance.AppCompat"

            app:layout_constraintLeft_toLeftOf="@+id/guideline3"
            android:layout_marginStart="16dp"/>

        <TextView
            android:text="@{@string/sunset(conditions.sunsetTime)}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sunset"
            app:layout_constraintBaseline_toBaselineOf="@+id/wind"
            app:layout_constraintLeft_toLeftOf="@+id/sunrise"
            tools:text="Sunset: 5:56 PM"
            android:textAppearance="@style/TextAppearance.AppCompat"/>

        <android.support.constraint.Guideline
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/guideline3"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="480dp"
            app:layout_constraintGuide_percent="0.5"/>

    </android.support.constraint.ConstraintLayout>
</layout>