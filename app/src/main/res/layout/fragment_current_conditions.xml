<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="conditions"
          type="com.mariebyleen.weather.weather_display.current_conditions.view_model.CurrentConditionsViewModel"/>
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="@{conditions.temperature}"
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            tools:text="72"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintVertical_bias="0.25"
            app:layout_constraintHorizontal_bias="0.15"
            android:textSize="56sp"/>

        <TextView
            android:text=
                "@{@string/degrees(conditions.useFahrenheit ? @string/fahrenheit : @string/celsius)}"
            android:id="@+id/degrees_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintLeft_toRightOf="@+id/temperature"
            app:layout_constraintTop_toTopOf="@+id/temperature"
            tools:text="o F"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:text="@{@string/updated(conditions.updateTime)}"
            android:id="@+id/updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Last updated: 8:30 pm"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:text="@{conditions.weatherData.cityName}"
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat"
            app:layout_constraintTop_toBottomOf="@+id/updated"
            tools:text="Lawrence"
            app:layout_constraintLeft_toLeftOf="@+id/updated"
            app:layout_constraintRight_toRightOf="@+id/updated"/>

        <TextView
            android:text="@{conditions.weatherData.description}"
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/temperature"
            app:layout_constraintTop_toBottomOf="@+id/temperature"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.25"
            tools:text="Scattered clouds"
            android:textAppearance="@style/TextAppearance.AppCompat"/>

        <TextView
            android:text="@{@string/humidity(conditions.humidity)}"
            android:id="@+id/humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Humidity: 45%"
            android:textAppearance="@style/TextAppearance.AppCompat"
            app:layout_constraintLeft_toLeftOf="@+id/description"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/description"/>

        <TextView
            android:text="@{@string/wind_speed(conditions.windSpeed)}"
            android:id="@+id/wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Wind: 12 mph NNE"
            app:layout_constraintLeft_toLeftOf="@+id/humidity"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/humidity"
            android:textAppearance="@style/TextAppearance.AppCompat"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/snow"
            android:id="@+id/imageView4"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.85"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintVertical_bias="0.25"/>

    </android.support.constraint.ConstraintLayout>
</layout>